{
  "apps": [
    {
      "name": "Pollux Ruby Shatter :: Sharding Client",
      "script": "./sharding.js",
      "instances": 1,
      "exec_mode": "cluster",
      "max_memory_restart":"500M",
      "watch": ["./pollux.js", "./core/gearbox.js"],
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "Pollux Dash!",
      "cwd":"./dash/",
      "script": "./server.js",
      "instances": 1,
      "max_memory_restart":"500M",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
  